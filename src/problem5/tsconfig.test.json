{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "es2020",
    "module": "es2022",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "outDir": "./dist-test",
    "typeRoots": ["./src/types", "./node_modules/@types"]
  },
  "include": ["src/**/*.test.ts", "src/**/*.spec.ts", "tests/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
